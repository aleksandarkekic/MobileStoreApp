<Page x:Class="MobileShop.Pages.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MobileShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2">
    <Grid>
        <StackPanel>
            <DataGrid x:Name="dataGrid1" ItemsSource="{Binding ListPersons}" IsReadOnly="true" AutoGenerateColumns="True"  Margin="150,90,150,30"/>
          
            <StackPanel Orientation="Horizontal" Margin="150,0,150,20">
                <Button x:Name="delete"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Click="delete_Click" Padding="0"   Foreground="black" BorderBrush="red" Height="30" Width="100" FontFamily="Montserrant"  Cursor="Hand" FontSize="8" BorderThickness="2">
                    <TextBlock Text="Prodaja/Obrisi" Margin="0,0,0,0" FontSize="13" Foreground="black"/>
                </Button>
                
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
